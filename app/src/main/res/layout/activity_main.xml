<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.mitteloupe.notebook.widget.NotebookPageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.mitteloupe.notebook.widget.HandDrawnEditText
        android:id="@+id/edit1"
        android:layout_width="192sp"
        android:layout_height="32sp"
        android:layout_marginStart="@dimen/gridSize"
        android:layout_marginLeft="@dimen/gridSize"
        android:layout_marginTop="@dimen/gridSize"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:text="Hello World!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mitteloupe.notebook.widget.HandDrawnButton
        android:id="@+id/button1"
        android:layout_width="160sp"
        android:layout_height="48sp"
        android:layout_marginStart="@dimen/gridSize"
        android:layout_marginLeft="@dimen/gridSize"
        android:layout_marginTop="@dimen/gridSize"
        android:gravity="center"
        android:text="Hello Universe!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit1" />

    <com.mitteloupe.notebook.widget.HandDrawnButton
        android:id="@+id/button2"
        android:layout_width="160sp"
        android:layout_height="48sp"
        android:layout_marginStart="@dimen/gridSize"
        android:layout_marginLeft="@dimen/gridSize"
        android:layout_marginTop="@dimen/gridSize"
        android:enabled="false"
        android:gravity="center"
        android:text="Hello Universe!"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@+id/edit1" />

    <com.mitteloupe.notebook.widget.HandDrawnPieView
        android:id="@+id/pie"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/gridSize"
        android:layout_marginLeft="@dimen/gridSize"
        android:layout_marginTop="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <com.mitteloupe.notebook.widget.HandDrawnSwitch
        android:id="@+id/drawn_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gridSize"
        android:layout_marginLeft="@dimen/gridSize"
        android:layout_marginTop="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pie" />

    <com.mitteloupe.notebook.widget.HandDrawnCircleButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="@dimen/gridSize"
        android:gravity="center"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
